<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zs.com.slide.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d68b8b"
        android:text="Hello World!" />

    <zs.com.slide.CustomView
        android:id="@+id/customView"
        android:background="#FF8BCAD6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv"
        android:text="scroller"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroller移动"/>

        <Button
            android:id="@+id/bt_animator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画移动"/>

        <Button
            android:id="@+id/bt_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroller"/>

    </LinearLayout>
</RelativeLayout>
